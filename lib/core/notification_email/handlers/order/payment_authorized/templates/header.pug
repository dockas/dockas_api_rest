meta(http-equiv="Content-Type", content="text/html; charset=utf-8")

link(href="https://fonts.googleapis.com/css?family=Lato:100,300,400" rel="stylesheet")

style.
    body {
        font-family: 'Lato','Helvetica Neue', sans-serif;
        font-weight: 300;
        line-height: 1.5;
        font-size: 18px;
        text-align: justify;
        background: #f9f9f9;
        margin: 0;
        padding: 20px;
        color: #555;
    }

    @media (max-width: 700px) {
        body {
            padding: 10px;
        }
    }

    .logo-container {
        text-align: center;
        margin-bottom: 20px;
    }

    .logo-container img {
        height: 30px;
        width: auto;
    }

    .container {
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 3px;
    }

    .content {
        padding: 50px 40px 70px 40px;
    }

    .title {
        margin-top: 0;
        font-size: 1.17em;
        font-weight: 800;
        margin-bottom: 20px;
    }